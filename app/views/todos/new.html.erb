<div class="flex flex-col w-1/3">
  <h1 class="text-3xl">New To-Do</h1>
  <%= form_with model: @todo, class: "flex flex-col mt-4 gap-4" do |f| %>
    <div class="field flex flex-col gap-2">
      <%= f.label :title, class: "font-medium" %>
      <%= f.text_field :title, class: "w-full border px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="actions flex justify-between">
      <%= link_to "Back", todos_index_path,
          class: "inline-block px-3 py-2 rounded-lg bg-gray-100 hover:bg-gray-200" %>
      <%= f.submit "Create Todo", class: "px-4 py-2 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 active:bg-blue-800" %>
    </div>
  <% end %>
</div>
